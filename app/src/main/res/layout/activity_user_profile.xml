<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ViewModel Method Tracking Demo"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            android:textColor="@android:color/black" />

        <!-- User ID Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="User ID">

            <EditText
                android:id="@+id/userIdEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Load Profile Button -->
        <Button
            android:id="@+id/loadProfileButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Load User Profile"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:textColor="@android:color/white" />

        <!-- Update Profile Button -->
        <Button
            android:id="@+id/updateProfileButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Update Profile (Custom Serialization)"
            android:backgroundTint="@android:color/holo_green_dark"
            android:textColor="@android:color/white" />

        <!-- Update Preferences Button -->
        <Button
            android:id="@+id/updatePreferencesButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Update Preferences (Mixed Types)"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:textColor="@android:color/white" />

        <!-- Track View Button -->
        <Button
            android:id="@+id/trackViewButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Track View (No Global Params)"
            android:backgroundTint="@android:color/holo_purple"
            android:textColor="@android:color/white" />

        <!-- Complex Operation Button -->
        <Button
            android:id="@+id/complexOperationButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Complex Operation (Privacy-Aware)"
            android:backgroundTint="@android:color/holo_red_dark"
            android:textColor="@android:color/white" />

        <!-- Profile Display -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile Info"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/profileDisplayText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:text="No profile loaded"
            android:textSize="14sp"
            android:minHeight="60dp"
            android:gravity="center_vertical" />

        <!-- Preferences Display -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preferences Info"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/preferencesDisplayText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:text="No preferences set"
            android:textSize="14sp"
            android:minHeight="80dp"
            android:gravity="center_vertical" />

        <!-- Instructions -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Instructions:\n\n• Load Profile: Tracks with primitive parameters\n• Update Profile: Uses custom UserProfile serializer\n• Update Preferences: Shows mixed parameter types\n• Track View: Demonstrates array handling without global params\n• Complex Operation: Shows privacy-aware serialization\n\nCheck logs to see how different serializers handle the parameters!"
            android:textSize="12sp"
            android:padding="12dp"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>